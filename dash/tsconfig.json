{
  "compilerOptions": {
    "target": "es2020", // Changed from ES2017 to a more modern target
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "baseUrl": "." // <-- ADD THIS LINE
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js", // Include .js files if you have them in your project
    "**/*.jsx", // Include .jsx files if you have them in your project
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}